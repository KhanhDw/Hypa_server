# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true

# CORS settings
CORS_ORIGINS=http://localhost:5173,https://hypa.app
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate limiting
RATE_LIMIT_DEFAULT=10/minute
RATE_LIMIT_ERROR_MESSAGE=Rate limit exceeded

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cache settings
CACHE_MAXSIZE=100
CACHE_TTL_SECONDS=600

# Fetching settings
FETCH_TIMEOUT=10
FETCH_USER_AGENT=Mozilla/5.0 (compatible; LinkPreview/1.0)
FETCH_FOLLOW_REDIRECTS=true

# Environment
ENVIRONMENT=development